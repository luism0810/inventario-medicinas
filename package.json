{
	"name": "inventario-medicinas",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"test": "vitest run",
		"test:watch": "vitest",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"seed:run": "tsc prisma/seed.ts --target es2022 --module nodenext && node prisma/seed.js"
	},
	"devDependencies": {
		"@eslint/compat": "^1.4.0",
		"@eslint/js": "^9.36.0",
		"@sveltejs/adapter-auto": "^6.1.0",
		"@sveltejs/kit": "^2.43.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.0",
		"@tailwindcss/postcss": "^4.1.14",
		"@types/node": "^22",
		"autoprefixer": "^10.4.21",
		"csv-parse": "^6.1.0",
		"dotenv": "^17.2.3",
		"eslint": "^9.36.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.12.4",
		"globals": "^16.4.0",
		"postcss": "^8.5.6",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prisma": "^6.17.0",
		"svelte": "^5.39.5",
		"svelte-check": "^4.3.2",
		"tailwindcss": "^4.1.14",
		"ts-node": "^10.9.2",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.44.1",
		"vite": "^7.1.7",
		"vitest": "^4.0.10"
	},
	"dependencies": {
		"@prisma/client": "^6.17.0",
		"@types/bcrypt": "^6.0.0",
		"bcrypt": "^6.0.0",
		"bcryptjs": "^3.0.3",
		"lucide-svelte": "^0.553.0",
		"sveltekit-superforms": "^2.28.1",
		"zod": "^4.1.12"
	},
	"prisma": {
		"seed": "npm run seed:run"
	}
}
